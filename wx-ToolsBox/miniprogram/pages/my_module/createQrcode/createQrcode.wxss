page {
    padding: 0;
    margin: 0;
    font-size: 30rpx;
    color: #757575;
    background-color: #eeeeee;
    width: 100%;
    height: 100%ï¼›;
}

.image {
    display: flex;
    width: 720rpx;
    margin: 20rpx 15rpx 0 15rpx;
    overflow: hidden;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,0.2);
}

.input {
    background-color: #ffffff;
    width: 720rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    margin: 20rpx 15rpx;
    border: none;
    box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,0.2);
}

.button {
    appearance: none;
    box-sizing: border-box;
    width: 720rpx;
    font-size: 30rpx;
    margin-left: 15rpx;
    background-color: #08e037;
    border-radius: 4rpx;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color: #ffffff;
    border: none;
}

.button::after {
    border: none;
}

.button-hover {
    background-color: #000000;
    color: #ffffff;
}

.section {
    box-sizing: border-box;
    width: 720rpx;
    margin: 0 15rpx;
    margin-top: 15rpx;
    background-color: #ffffff;
    border: none;
    padding: 15rpx 30rpx;
    box-shadow: 0 1rpx 1rpx rgba(0,0,0,0.1);
    overflow: hidden;
}

.section:last-child {
    margin-bottom: 20rpx;
}

.section_title {
    box-sizing: border-box;
    font-size: 24rpx;
}

.section_input {
    text-align: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.picker {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    overflow: hidden;
}
.section_input_value{
  color: #222;
}