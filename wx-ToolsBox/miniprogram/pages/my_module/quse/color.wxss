page {
  background-color: #000;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.iphone-x {
  height: calc(100vh - 68rpx);
  margin-bottom: 68rpx;
}

.header {
  width: 100%;
  height: 120rpx;
  color: #fff;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 0;
  flex-shrink: 0;
}

.content {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}

.content .wrapper {
  padding: 70rpx;
  width: calc(100% - 140rpx);
  height: calc(100% - 140rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .target {
  width: 100%;
  height: 100%;
}

.content .movrea {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .magnifier {
  width: 128rpx;
  height: 128rpx;
  border: 8rpx solid #fff;
  box-shadow: 0rpx 2rpx 20rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  background-size: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .circle {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .bigger {
  width: 94rpx;
  height: 94rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .pixels {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #fff;
  overflow: hidden;
}

.footer {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 0;
  flex-shrink: 0;
}

.footer .button {
  margin-bottom: 20rpx;
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  background-color: #fff;
  background-image: url('data:image/svg+xml;base64,');
  background-position: center;
}